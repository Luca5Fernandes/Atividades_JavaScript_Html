<meta charset="UTF-8">
<script>
	
	function pulaLinha() {

		document.write("<br>");	
		document.write("<br>");	
	}

	function vizualizar(frase) {

		document.write(frase);
		pulaLinha();
	}

	var limite = parseInt(prompt("Entre com a data limite"));
	
	var anoCopa = 1930;

	while(anoCopa <= limite) {

		vizualizar("Teve Copa nos Anos de " + anoCopa);
		anoCopa = anoCopa + 4;	
	}

		vizualizar("Fim");
	
</script>
